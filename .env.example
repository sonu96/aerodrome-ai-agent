# Aerodrome AI Agent - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
ENVIRONMENT=development  # development, production, test
DEBUG=true
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# =============================================================================
# API KEYS (REQUIRED)
# =============================================================================

# OpenAI API Key for LLM operations
OPENAI_API_KEY=your_openai_api_key_here

# Coinbase Developer Platform (CDP) API Keys
CDP_API_KEY_NAME=your_cdp_api_key_name
CDP_API_KEY_PRIVATE_KEY=your_cdp_private_key_here

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Network Configuration
NETWORK=base-mainnet  # base-mainnet, base-sepolia (testnet)
CDP_NETWORK_ID=base-mainnet
RPC_URL=https://mainnet.base.org  # Optional, CDP provides this

# Wallet Configuration (Optional - will create new if not provided)
CDP_WALLET_ID=your_wallet_id_if_existing
CDP_WALLET_SEED=your_wallet_seed_if_existing

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================

# Agent Identity
AGENT_NAME=aerodrome-agent
OPERATION_MODE=autonomous  # autonomous, manual, simulation
RISK_LEVEL=medium  # low, medium, high

# Operational Parameters
MAX_CONCURRENT_OPERATIONS=5
OPERATION_INTERVAL=60  # seconds between brain cycles

# =============================================================================
# BRAIN CONFIGURATION
# =============================================================================

# Decision Thresholds
BRAIN_CONFIDENCE_THRESHOLD=0.7  # 0.0-1.0
BRAIN_RISK_THRESHOLD=0.3  # 0.0-1.0
BRAIN_MIN_OPPORTUNITY_SCORE=0.6  # 0.0-1.0

# Timing
BRAIN_OBSERVATION_INTERVAL=60  # seconds
BRAIN_EXECUTION_TIMEOUT=30  # seconds

# Safety Limits
BRAIN_MAX_POSITION_SIZE=0.2  # 20% of portfolio max
BRAIN_MAX_SLIPPAGE=0.02  # 2% max slippage
BRAIN_EMERGENCY_STOP_LOSS=0.1  # 10% stop loss
BRAIN_MAX_GAS_PRICE=50.0  # gwei

# =============================================================================
# MEMORY SYSTEM CONFIGURATION
# =============================================================================

# Mem0 Configuration
MEMORY_USER_ID=aerodrome_agent
MEMORY_VECTOR_STORE=qdrant  # qdrant, chroma, postgres
MEMORY_EMBEDDING_MODEL=text-embedding-ada-002
MEMORY_LLM_MODEL=gpt-4

# Vector Database (Qdrant)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=your_qdrant_api_key_if_cloud
MEMORY_COLLECTION=aerodrome_memories

# Memory Limits
MEMORY_MAX_MEMORIES=10000
MEMORY_MAX_AGE_DAYS=90
MEMORY_MAX_QUERY=10

# Pattern Extraction
MEMORY_PATTERN_THRESHOLD=5  # min occurrences for pattern
MEMORY_PATTERN_CONFIDENCE=0.8
MEMORY_SIMILARITY_THRESHOLD=0.85

# Pruning
MEMORY_PRUNING_ENABLED=true
MEMORY_PRUNING_INTERVAL=24  # hours
MEMORY_HOT_TIER_DAYS=7
MEMORY_WARM_TIER_DAYS=30
MEMORY_COLD_TIER_DAYS=60

# =============================================================================
# CDP SDK CONFIGURATION
# =============================================================================

# Transaction Settings
CDP_MAX_GAS_PRICE=50.0  # gwei
CDP_GAS_MULTIPLIER=1.1
CDP_CONFIRMATION_BLOCKS=1
CDP_TRANSACTION_TIMEOUT=300  # seconds

# Retry Configuration
CDP_MAX_RETRIES=3
CDP_RETRY_DELAY=1.0  # seconds

# Safety Settings
CDP_SIMULATION_REQUIRED=true
CDP_MAX_SLIPPAGE=0.02  # 2%
CDP_MIN_CONFIRMATIONS=1

# Rate Limiting
CDP_REQUESTS_PER_SECOND=10
CDP_BURST_LIMIT=50

# =============================================================================
# SAFETY & RISK MANAGEMENT
# =============================================================================

# Emergency Stop
EMERGENCY_STOP_ENABLED=true
MAX_LOSS_PERCENTAGE=10.0  # Maximum acceptable loss percentage

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Metrics
METRICS_ENABLED=true
METRICS_PORT=8080
HEALTH_CHECK_PORT=8081

# Logging
CDP_LOG_TRANSACTIONS=true
CDP_ENABLE_METRICS=true

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# Local Storage Paths
DATA_DIR=./data
LOGS_DIR=./logs
CACHE_DIR=./cache